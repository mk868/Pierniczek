<catel:Window x:Class="Pierniczek.Views.KnnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pierniczek.Views"
        xmlns:behaviors="clr-namespace:Pierniczek.Behaviors"
        mc:Ignorable="d"
        xmlns:catel="http://schemas.catelproject.com"
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
        Title="Knn Window" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <oxy:PlotView Grid.Row="0" Model="{Binding ScatterModel}"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="K:" />
            <TextBox Text="{Binding K}" MinWidth="50"/>
            <Label Content=" x:" />
            <TextBox Text="{Binding X}" MinWidth="50"/>
            <Label Content=" y:" />
            <TextBox Text="{Binding Y}" MinWidth="50"/>
            <ComboBox ItemsSource="{Binding Methods}" SelectedItem="{Binding SelectedMethod}" MinWidth="100"/>
            <Button Command="{Binding Search}">Search</Button>
        </StackPanel>
    </Grid>
</catel:Window>
