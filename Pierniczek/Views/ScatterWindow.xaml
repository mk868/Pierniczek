<catel:Window x:Class="Pierniczek.Views.ScatterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pierniczek.Views"
        xmlns:behaviors="clr-namespace:Pierniczek.Behaviors"
        mc:Ignorable="d"
        xmlns:catel="http://schemas.catelproject.com"
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
        Title="Scatter Window" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <local:SelectColumnView Grid.Column="0" DataContext="{Binding ColumnX}"/>
            <local:SelectColumnView Grid.Column="1" DataContext="{Binding ColumnY}"/>
            <Button Grid.Column="2" Content="Generate" Margin="5px 0" Command="{Binding Generate}" />
        </Grid>
        <oxy:PlotView Grid.Row="1" Model="{Binding ScatterModel}"/>
    </Grid>
</catel:Window>
